{
  "description": "Show information about Firefox Sync.",
  "manifest_version": 2,
  "name": "About Sync",
  "version": "0.0.50",
  "homepage_url": "https://github.com/mhammond/aboutsync",

  "applications": {
    "gecko": {
      "id": "aboutsync@mhammond.github.com",
      "strict_min_version": "62.0"
    }
  },

  "background": {
    "scripts": ["webext/background.js"]
  },

  "experiment_apis": {
    "aboutsync": {
      "schema": "webext/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["aboutsync"]],
        "script": "webext/implementation.js"
      }
    }
  }
}
